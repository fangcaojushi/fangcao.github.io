@charset "utf-8";
* {
	list-style-type: none;
}
/* timeline */
.high100{
	height: 100%;
}
#timeline {
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: relative;
	background: #F3F3F4;
}
.hdetailtitle{
	background: #1AB394;
	color: #fff;
	text-align: center;
	margin: 0;
	padding: 10px 0;
}
#dates {
	position: relative;
	height: 100%;
	width:20%;
	left: auto;
	margin-left: auto;
	bottom: auto;
	z-index: auto;
	padding: 20px 0;
	box-sizing: border-box;
	float: left;
	margin-right:20px;
	
	background: #fff;
	padding-right: 2px;
	overflow: auto;
	margin-bottom: 0;
}

#dates li {
	width: 100%;
	position: relative;
	height: 80px;
	text-align: right;
	padding-right: 50px;
	cursor: pointer;
	text-indent: 0;
}
#dates li:hover{
	font-weight: bold;
}
#dates li.active a h3 {
	color: #f8860b;
}
#dates li.active i {
	background: #f8860b;
	border:1px double #ea7c04;
	box-shadow: 1px 1px 5px rgba(248,134,11,.8);
}
#dates li i{
	width: 20px;
	height: 20px;
	background: #1AB394;
	position: absolute;
	right: 24px;
	text-align: center;
	line-height: 18px;
	top:16px;
	z-index: 9999;
	display: block;
	border-radius: 10px;
	border:1px double #0B997C;
	color: #fff;
	box-shadow: 1px 1px 5px rgba(20,177,145,.8);
	cursor: pointer;
	font-style: normal;
}
#dates a {
	padding-top: 10px;
}
#dates a h3{
	color: #1AB394;
	padding-top: 10px;
}
#dates a p{
	color: #C0C0C0;
}
#dates .selected {
}

#issues {
	width:75%;
	height: 100%;
	overflow: hidden;
	float: left;
}


.cardetails {
	width: 77%;
	height: 100%;
	float:left;
}
.hlrposition{
	top:50%;
	bottom: auto;
	width: 50px;
	height: 50px;
	margin: -25px 25px 0 25px;
	z-index: 9999999;
	border-radius:25px ;
	border: #f8860b 1px solid;
	background-color: #f8860b;
	color: #fff;
}
.mtlclear {
	font-size: 16px;
	margin-left: 0;
	padding-left: 0;
}

.mtrclear {
	margin-right: 0;
	padding-right: 0;
}

