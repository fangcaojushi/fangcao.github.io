.hnavfixbox{
	width:100%;     
	clear: both; 
	border-bottom: #e7eaec 1px solid;
	overflow: hidden;
}
.hnavfixbt{  
    width:100%;     
    margin:0 auto; 
}  
.hnavfixbt a{  
    width:120px;  
    height:50px;  
    line-height:50px;  
    float:left;  
    border-right:2px solid #eee;  
    text-align:center;  
    cursor:pointer; 
    color:#505050; 
}
.hnavfixbt a i{
	padding-right: 5px;
}  
.hnav{  
    height:52px;  
    width:100%;  
    background:#f5f5f5;  
}  
.hnav .hcur{  
    background:#fff;  
    border-top:2px solid #1a92cf;  
    color:#1a92cf;  
    margin-top: 2px;
}  
.hfixed{  
    position:fixed;  
    bottom:0;  
    left:0; 
    z-index: 999999; 
}  
    